@model LoginDTO

    <div class="d-flex justify-content-center">
        <div class="col-xl-4 mt-10">
            <div class="card card-plain bg-light border p-5">
                <div class="card-header pb-0 text-left bg-transparent">
                    <h3 class="font-weight-bolder text-info text-gradient">Welcome back</h3>
                    <p class="mb-0">Enter your email and password to sign in</p>
                </div>
                <div class="card-body">
                    <form asp-area="User" asp-controller="User" asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly"></div>

                        <!-- Error Message -->
                        @if (Html.ValidationMessageFor(msg => msg.ErrorMessage) != null)
                        {
                            <div class="mb-2 text-danger">
                                @Html.ValidationMessageFor(msg => msg.ErrorMessage)
                            </div>
                        }

                        <!-- Error Message -->

                        <!-- Email -->
                        <div class="mb-3">
                            <div class="mb-2 text-danger">
                                @Html.ValidationMessageFor(msg => msg.Email)
                            </div>
                            <label>Email</label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="Email" aria-label="Email" aria-describedby="email-addon">
                        </div>
                        <!-- Email -->

                        <!-- Password -->
                        <div class="mb-3">
                            <div class="mb-2 text-danger">
                                @Html.ValidationMessageFor(msg => msg.Password)
                            </div>
                            <label>Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Password" aria-label="Password" aria-describedby="password-addon">
                        </div>
                        <!-- Password -->

                        <!-- Remember Me -->
                        @*<div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" id="rememberMe" checked="">
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                        </div>*@
                        <!-- Remember Me -->

                        <!-- Sign In Button -->
                        <div class="text-center">
                            <button type="submit" class="btn bg-gradient-info w-100 mt-4 mb-0">Sign in</button>
                        </div>
                        <!-- Sign In Button -->

                    </form>
                </div>
            </div>
        </div>
    </div>
